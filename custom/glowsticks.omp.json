{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "\uf120 {{ .Shell }} in {{ if ne .Folder \"~\"}}\uf07b {{ .Folder }}{{else}}\uf015{{end}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "p:white",
          "background": "p:black",
          "template": "{{ lower .UserName }}@{{ lower .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:orange",
          "template": " \uf07b {{ .Path }} ",
          "properties": {
            "home_icon": "\uf015",
            "style": "folder"
          }
        },
        {
          "type": "command",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:green",
          "template": " {{ .Output }} ",
          "properties": {
            "script": "BRANCH=$(git branch --show-current 2>/dev/null)\n[[ -z $BRANCH ]] && exit\nstatus=$(git status --porcelain | awk '{print $1}')\n[[ $status == *\"R\"* ]] && bits+='>'\n[[ $status == *\"A\"* ]] && bits+='+'\n[[ $status == *\"??\"* ]] && bits+='?'\n[[ $status == *\"D\"* ]] && bits+='x'\n[[ $status == *\"M\"* ]] && bits+='!'\n[[ \"$(git rev-list --count \"@{u}..\")\" -gt 0 ]] && bits+='*'\n[[ -n $bits ]] && STAT=\" \ue728 $bits\"\necho -n \"\ue725 $BRANCH$STAT\"\n",
            "shell": "bash"
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:darkred",
          "template": " \ufa1e{{ .FormattedMs }} ",
          "properties": {
            "always_enabled": true,
            "style": "round"
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:blue",
          "background_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "trailing_diamond": "\ue0b4",
          "template": " {{ if gt .Code 0 }}\uf00d {{ reason .Code }}{{ else }}\uf00c{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "shell",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "p:white",
          "background": "p:black",
          "template": " {{ .Name }} "
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "p:white",
          "background_templates": [
            "{{if eq \"Charging\" .State.String }}p:green{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:orange{{end}}"
          ],
          "template": " {{.Templates }}{{ .Percentage}} \uf8ef ",
          "templates": [
            "{{if eq \"Discharging\" .State.String}}{{if lt .Percentage 11}}\uf579{{else if lt .Percentage 21}}\uf57a{{else if lt .Percentage 31}}\uf57b{{else if lt .Percentage 41}}\uf57c{{else if lt .Percentage 51}}\uf57d{{else if lt .Percentage 61}}\uf57d{{else if lt .Percentage 71}}\uf57f{{else if lt .Percentage 81}}\uf580{{else if lt .Percentage 91}}\uf581{{else}}\uf578{{end}}{{end}}",
            "{{if eq \"Charging\" .State.String}}{{ if lt .Percentage 21}}\uf585{{else if lt .Percentage 31}}\uf586{{else if lt .Percentage 41}}\uf587{{else if lt .Percentage 61}}\uf588{{else if lt .Percentage 81}}\uf589{{else if lt .Percentage 91}}\uf58a{{else}}\uf583{{end}}{{end}}"
          ],
          "templates_logic": "first_match",
          "properties": {
            "charged_icon": "\uf583",
            "charging_icon": "\uf583",
            "discharging_icon": "\uf578 "
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "foreground": "p:white",
          "background": "p:blue",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground": "p:white",
    "background": "transparent",
    "template": "\uf061 "
  },
  "secondary_prompt": {
    "foreground": "p:white",
    "background": "transparent",
    "template": "\uf061 "
  },
  "palette": {
    "black": "#33395b",
    "blue": "#359ddd",
    "darkred": "#7c0a16",
    "green": "#277b48",
    "orange": "#ff972e",
    "red": "#de3142",
    "white": "#efeef4"
  }
}
